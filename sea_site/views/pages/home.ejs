<section class="homeContainer hero">
  <video class="bg-video" autoplay muted loop playsinline>
    <source src="/images/sea.mp4" type="video/mp4" />
  </video>
  <div class="overlay"></div>
  <div class="homeContentBox">
    <h1>BlueHope</h1>
  </div>
</section>

<div class="donationTitle">
    <h2>Your donation can save their lives</h2>
</div>


<section class="homeContainer">
    <div class="donationContent">
        <div class="donationBox">
            <i class="bi bi-1-square"></i>
            <div class="donationText">
                <h3>Donate</h3>
                <p>Make a financial contribution</p>
            </div>
        </div>
        
        <div class="donationBox">
            <i class="bi bi-2-square"></i>
            <div class="donationText">
                <h3>Volunteer</h3>
                <p>Join our team of volunteers</p> <!-- volunteers の方が自然 -->
            </div>
        </div>
        
        <div class="donationBox">
            <i class="bi bi-3-square"></i>
            <div class="donationText">
                <h3>Send Supplies</h3>
                <p>Provide essential items</p>
            </div>
        </div>
        
        <div class="donationBox">
            <i class="bi bi-4-square"></i>
            <div class="donationText">
                <h3>Corporate Partner</h3>
                <p>Collaborate with us as a business</p>
            </div>
        </div>
    </div>

    <div class="paymentContent">
        <div class="paymentContentBox">
            <div class="paymentBox"><h4>$10</h4></div>
            <div class="paymentBox"><h4>$25</h4></div>
            <div class="paymentBox"><h4>$50</h4></div>
            <div class="paymentBox"><h4>$100</h4></div>
        </div>
        
        <div class="paymentMethods">
            <span class="payLogo paypal">
                <i class="bi bi-paypal" aria-hidden="true"></i>
                <span class="payLabel">PayPal</span>
            </span>
            <span class="payLogo applepay"> Pay</span>
        </div>
        
        <button class="donateNowBtn">DONATE NOW</button>
    </div>
</section>